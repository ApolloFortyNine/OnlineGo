<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/icon_container"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_person_outline"
            />
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:gravity="right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/timer"
        app:layout_constraintLeft_toRightOf="@id/icon_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="MrAlex"
            />

        <TextView
            android:id="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/ubuntu"
            android:textSize="12sp"
            tools:text="(14k)" />

        <android.support.text.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            tools:text="flg"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/colorIndicatorBlack"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/gradient_black"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/colorIndicatorWhite"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/gradient_white"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit"
        tools:text="3 captured + 7.5 komi"
        app:layout_constraintLeft_toLeftOf="@id/first_row"
        app:layout_constraintTop_toBottomOf="@id/first_row"
    />

    <android.support.v7.widget.CardView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="4dp"
        app:cardBackgroundColor="@color/colorOffWhite"
        app:cardElevation="1dp"
        app:cardCornerRadius="4dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/timerFirstLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/kanit_semibold"
                tools:text="7 : 24"
                />

            <TextView
                android:id="@+id/timerSecondLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/kanit"
                app:layout_constraintRight_toRightOf="@id/timerFirstLine"
                app:layout_constraintTop_toBottomOf="@id/timerFirstLine"
                android:textSize="12sp"
                tools:text="5 x 30s"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/clockIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_clock"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>